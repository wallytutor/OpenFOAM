FoamFile
{
    format      ascii;
    class       dictionary;
    location    "constant";
    object      cloudProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

type        sprayCloud;

solution
{
    calcFrequency   1;
    maxTrackTime    5.0;
    maxCo           0.3;

    coupled         true;
    transient       no;
    cellValueSourceCorrection on;

    sourceTerms
    {
        resetOnStartup  false;
        schemes
        {
            rho             explicit 1;
            U               explicit 1;
            Yi              explicit 1;
            h               explicit 1;
            radiation       explicit 1;

            // rho             semiImplicit 1;
            // U               semiImplicit 1;
            // Yi              semiImplicit 1;
            // h               semiImplicit 1;
            // radiation       semiImplicit 1;
        }
    }

    interpolationSchemes
    {
        rho             cell;
        U               cellPoint;
        mu              cell;
        T               cell;
        Cp              cell;
        kappa           cell;
        p               cell;
    }

    integrationSchemes
    {
        U               Euler;
        T               analytical;
    }
}


constantProperties
{
    T0              320;

    // place holders for rho0 and Cp0
    // - reset from liquid properties using T0
    rho0            1000;
    Cp0             4187;

    constantVolume  false;
}


subModels
{
    particleForces
    {
        sphereDrag;
        gravity;
    }

    injectionModels
    {
        model1
        {
            type              coneInjection;
            
            SOI               1;
            // duration          1.0e+300;

            flowRateProfile   constant 1;
            massFlowRate      0.01;
            uniformParcelSize volume;
            // parcelsPerSecond  20000000;
            parcelsPerSecond  20000;

    
            position          (0.001 0.0 0.0);
            direction         (1 0 0);
            thetaInner        constant 0.0;
            thetaOuter        constant 42.0;

            flowType          constantVelocity;
            Umag              8.0;

            injectionMethod   disc;
            dInner            0;
            dOuter            0.002;

            sizeDistribution
            {
                type            RosinRammler;
                Q               3;
                min             0.000001;
                max             0.000150;
                d               0.000150;
                n               3.5;
            }
        }
    }

    // ------------------------------------------------------------------------

    dispersionModel          none;
    // dispersionModel          stochasticDispersionRAS;

    // ------------------------------------------------------------------------

    isotropyModel stochastic;

    stochasticCoeffs
    {
        timeScaleModel
        {
            type        isotropic;
            alphaPacked 0.6;
            e           0.9;
        }
    }

    // ------------------------------------------------------------------------

    patchInteractionModel    standardWallInteraction;

    standardWallInteractionCoeffs
    {
        type            rebound;
    }

    // ------------------------------------------------------------------------

    heatTransferModel        RanzMarshall;

    RanzMarshallCoeffs
    {
        BirdCorrection  true;
    }

    // ------------------------------------------------------------------------

    compositionModel         singlePhaseMixture;

    singlePhaseMixtureCoeffs
    {
        phases
        (
            liquid
            {
                C7H16               1;
            }
        );
    }

    // ------------------------------------------------------------------------

    phaseChangeModel         liquidEvaporationBoil;

    liquidEvaporationBoilCoeffs
    {
        enthalpyTransfer enthalpyDifference;

        activeLiquids    ( C7H16 );
    }

    // ------------------------------------------------------------------------

    breakupModel             ReitzDiwakar; // ReitzKHRT;
    
    ReitzDiwakarCoeffs
    {
        solveOscillationEq yes;
        Cbag            6;
        Cb              0.785;
        Cstrip          0.5;
        Cs              10;
    }

    // ------------------------------------------------------------------------

    devolatilisationModel    none;

    surfaceReactionModel     none;

    surfaceFilmModel         none;

    atomisationModel         none;

    stochasticCollisionModel none;

    radiation                off;
}


cloudFunctions
{
    massFlux1
    {
        type massFlux;
    }
    patchPostProcessing1
    {
        type             patchPostProcessing;
        maxStoredParcels 1000;
        patches          ( inlet outlet );
    }
    particleTracks1
    {
        type            particleTracks;
        trackInterval   5;
        maxSamples      1000000;
        resetOnWrite    yes;
    }
}


