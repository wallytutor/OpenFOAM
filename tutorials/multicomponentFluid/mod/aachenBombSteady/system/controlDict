FoamFile
{
    format          ascii;
    class           dictionary;
    location        "system";
    object          controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     foamRun;

solver          multicomponentFluid;

startFrom       latestTime;

startTime       0;

stopAt          endTime;

endTime         500;

deltaT          1;

writeControl    timeStep;

writeInterval   20;

purgeWrite      5;

writeFormat     ascii;

writePrecision  10;

writeCompression off;

timeFormat      fixed;

timePrecision   0;

runTimeModifiable yes;

functions
{
    #includeFunc    Qdot
    #includeFunc    residuals(p, U, h, k, epsilon)
    surfaceFieldValue1
    {
        type            surfaceFieldValue;
        libs            ( "libfieldFunctionObjects.so" );
        enabled         yes;
        writeControl    writeTime;
        log             yes;
        writeFields     no;
        select          patch;
        patch           outlet;
        operation       average;
        weightField     phi;
        fields          ( C7H16 O2 H2O T );
    }
}

OptimisationSwitches
{
    fileHandler     collated;
}


