boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform 473.15;
    }
    outlet
    {
        type            inletOutlet;
        inletValue      uniform 473.15;
    }
    walls
    {
        type                zeroGradient;
    }
}

