FoamFile
{
    format      ascii;
    class       volVectorField;
    object      U;
}
// ************************************************************************* //

dimensions          [0 1 -1 0 0 0 0];

internalField       uniform (0 0 0);

boundaryField
{
    inlet
    {
        type                flowRateInletVelocity;
        profile             turbulentBL;

        // Following stoichiometry of C7H16 + 11O2 = 7CO2 + 8H2O, for 100 g of
        // fuel one needs 176 g of O2, which corresponds to 23.4% of total mass
        // flow rate. So to 0.1 kg/s of fuel one needs 0.176 kg/s / 0.234 =>
        massFlowRate        0.07521;

        // For potentialFoam initialization.
        // Computed approximately at initial temperature.
        rhoInlet            0.746;
    }
    outlet
    {
        type                inletOutlet;
        inletValue          uniform (0 0 0);
    }
    walls
    {
        type                fixedValue;
        value               uniform (0 0 0);
    }
}

// ************************************************************************* //
